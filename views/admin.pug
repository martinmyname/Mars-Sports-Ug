extends layout
block content
    h6 FarmerOne Dashboard &nbsp *Official use Only* &nbsp
        if admin.length
            table.listing-table.table-light.table-striped
                tr
                    th FirstName
                    th LastName
                    th Unique ID
                    th stock
                    th Gender
                    th Date Of Reg
                    th Date Of Birth
                    th NIN
                    th Phone
                each farmer in admin
                    tr
                        td #{farmer.firstName}
                        td #{farmer.lastName}
                        td #{farmer.idnumber}
                        td #{farmer.stock}
                        td #{farmer.gender}
                        td #{farmer.dateOfReg}
                        td #{farmer.dateOfBirth}
                        td #{farmer.NIN}
                        td #{farmer.phone}
                        td
                            button.btn.btn-dark.btn-block(type="submit")
                                a(href='/users/update/uf/'+farmer._id) Update
                button.btn.btn-dark.mx-auto.d-block
                    a(href='/users/regUrbanFarmer/') Add Urban Farmer
        else
            p No registrations have been done at the moment :(
            button.btn.btn-dark.mx-auto.d-block
                    a(href='/users/regUrbanFarmer/') Add Urban Farmer